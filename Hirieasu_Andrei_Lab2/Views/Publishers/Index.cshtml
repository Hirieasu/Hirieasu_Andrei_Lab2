@model Hirieasu_Andrei_Lab2.Models.LibraryViewModels.PublisherIndexData
@{   
    ViewData["Title"] = "Publishers";
    }
    <h2>Publishers</h2> 
    <p> 
        <a asp-action="Create">Create New</a>
        </p> 
        <table class="table">  
            <thead>   
                <tr>     
                    <th>Publisher Name</th>   
                    <th>Adress</th>      
                    <th>Books</th>    
                    <th></th>      
                    </tr>    
                    </thead>   
                    <tbody>    
                        @foreach (var item in Model.Publishers)  
                        {   
           string selectedRow = "";  
           if (item.ID == (int?)ViewData["PublisherID"])  
          {   
         selectedRow = "success"; 
          }     
       <tr class="@selectedRow">  
          <td>           
            @Html.DisplayFor(modelItem => item.PublisherName)  
           </td>       
           <td>       
               @Html.DisplayFor(modelItem => item.Adress) 
            </td>      
              <td>    
               @{     
           foreach (var book in item.PublishedBooks) 
          {                
          @book.Book.ID @:  @book.Book.Title <br /> 
   }   
      }   
       </td>    
    <td>       
      <a asp-action="Index" asp-route-id="@item.ID">Select</a> | 
    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
     <a asp-action="Details" asp-route-id="@item.ID">Details</a>|   
         <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>     
      </td>       
       </tr>    
            }  
       </tbody> 
        </table> 
@if (Model.Books != null)
{
         <h3>Books Published by Selected Publisher</h3>
    <table class="table">  
        <tr>  
            <th></th>     
            <th>Title</th>      
            <th>Author</th>   
            <th>Price</th>     
        </tr>      
        @foreach (var item in Model.Books)
        {
            string selectedRow = "";
            if (item.ID == (int?)ViewData["BookID"]) 
            {
                selectedRow = "success";
            }
             <tr class="@selectedRow">   
             <td>      
          @Html.ActionLink("Select", "Index", new { bookID = item.ID })     
            </td>        
             <td>           
           @item.Title     
             </td>            
              <td>               
           @item.Author       
             </td>         
              <td>             
           @item.Price      
              </td>   
               </tr>

          


        }
       
        </table>


} 
@if (Model.Orders != null)
{
    <h3>Orders of the Selected Book</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Order</th>
            <th>Customer</th>
            <th>Date</th>
        </tr>
        @foreach (var item in Model.Orders)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
            </tr>
        }
    </table>
